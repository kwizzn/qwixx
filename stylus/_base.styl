#container
  max-width: 800px

h1
  margin: 0 0 10px 0
  font-size: 24px
  text-align: center

.scoreRow
  display: flex
  display: -webkit-flex;
  button
    flex: 1
    -moz-flex: 1
    -webkit-flex: 1
    margin: 5px 2px
    &.active
      pointer-events: none
  &.red
    button
      &.active
        background-color: $brand-danger-darker
        border-color: $brand-danger-darkest
  &.yellow
    button
      &.active
        background-color: $brand-warning-darker
        border-color: $brand-warning-darkest
  &.green
    button
      &.active
        background-color: $brand-success-darker
        border-color: $brand-success-darkest
  &.blue
    button
      &.active
        background-color: $brand-primary-darker
        border-color: $brand-primary-darkest
  &.grey
    button
      &.active
        background-color: $gray-light
        border-color: $gray

.resultRow
  font-size: 24px
  text-align: center

  .result
    border-radius: 5px
    padding: 2px 5px
    &.red
      color: $brand-danger
      border: 2px solid $brand-danger
    &.yellow
      color: $brand-warning
      border: 2px solid $brand-warning
    &.green
      color: $brand-success
      border: 2px solid $brand-success
    &.blue
      color: $brand-primary
      border: 2px solid $brand-primary
    &.grey
      color: $gray
      border: 2px solid $gray
